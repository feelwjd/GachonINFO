<body>
    <div class="container">
        <div class="container justify-content-center">
            <%- include ('../partials/nav') %>
                <br><br>
        </div>
        <% if(session.email){ %>
            <div class="container">
                <div class="row">
                    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                        <div class="card border-0 shadow rounded-3 my-5">
                            <div class="card-body p-4 p-sm-5 text-center justify-content-center">
                                <h5 class="card-title text-center mb-5 fw-bold fs-5">
                                    <%= user[0].student_name; %>
                                        <%= user[0].student_univ; %>
                                            <%= user[0].department_name; %>
                                </h5>
                                <hr>
                                <h5 class="card-title text-center mb-5 fw-light fs-5">시간표</h5>
                                <table>
                                    <thead class="text-center">
                                        <tr width=20%>
                                            <th> </th>
                                            <th> </th>
                                            <th>월</th>
                                            <th>화</th>
                                            <th>수</th>
                                            <th>목</th>
                                            <th>금</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% function randomColor(){ var
                                            Color=['#c8707e','#e28fad','#efb4c1','#e48e58','#edaa7d','#f0c7ab','#5aa08d','#4c92b1','#a8c879','#678fae','#ac99c1','#96b1d0','#c08863','#ada759','#c8c2bd'];
                                            var num=Math.floor(Math.random() * 7); return Color[num]; } %>
                                            <% for(let x=0;x<list.length;x++){%>
                                                <% for(let i=0;i<5;i++){%>
                                                    <tr>
                                                        <th>
                                                            <%=x+1%>
                                                        </th>
                                                        <% if(list[x].class_day=='월' ) {%>
                                                            <td rowspan="1"
                                                                style="background-color: <%= randomColor(); %> ">
                                                                <%=list[x].subject_name%><br>
                                                                    <%=list[x].class_professor%><br>
                                                                        <%=list[x].classroom%>
                                                            </td>
                                                            <%break%>
                                                                <%}else{%>
                                                                    <td></td>
                                                                    <%}%>
                                                                        <% if(list[x].class_day=='화' ) {%>
                                                                            <td rowspan="1"
                                                                                style="background-color: <%= randomColor(); %>">
                                                                                <%=list[x].subject_name%><br>
                                                                                    <%=list[x].class_professor%><br>
                                                                                        <%=list[x].classroom%>
                                                                            </td>
                                                                            <%break%>
                                                                                <%}else{%>
                                                                                    <td></td>
                                                                                    <%}%>
                                                                                        <% if(list[x].class_day=='수' )
                                                                                            {%>
                                                                                            <td rowspan="1"
                                                                                                style="background-color: <%= randomColor(); %>">
                                                                                                <%=list[x].subject_name%>
                                                                                                    <br>
                                                                                                    <%=list[x].class_professor%>
                                                                                                        <br>
                                                                                                        <%=list[x].classroom%>
                                                                                            </td>
                                                                                            <%break%>
                                                                                                <%}else{%>
                                                                                                    <td></td>
                                                                                                    <%}%>
                                                                                                        <% if(list[x].class_day=='목'
                                                                                                            ) {%>
                                                                                                            <td rowspan="1"
                                                                                                                style="background-color: <%= randomColor(); %>">
                                                                                                                <%=list[x].subject_name%>
                                                                                                                    <br>
                                                                                                                    <%=list[x].class_professor%>
                                                                                                                        <br>
                                                                                                                        <%=list[x].classroom%>
                                                                                                            </td>
                                                                                                            <%break%>
                                                                                                                <%}else{%>
                                                                                                                    <td>
                                                                                                                    </td>
                                                                                                                    <%}%>
                                                                                                                        <% if(list[x].class_day=='금'
                                                                                                                            )
                                                                                                                            {%>
                                                                                                                            <td rowspan="1"
                                                                                                                                style="background-color: <%= randomColor(); %>">
                                                                                                                                <%=list[x].subject_name%>
                                                                                                                                    <br>
                                                                                                                                    <%=list[x].class_professor%>
                                                                                                                                        <br>
                                                                                                                                        <%=list[x].classroom%>
                                                                                                                            </td>
                                                                                                                            <%break%>
                                                                                                                                <%}else{%>
                                                                                                                                    <td>
                                                                                                                                    </td>
                                                                                                                                    <%}%>
                                                    </tr>
                                                    <%}%>
                                                        <%}%>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } else{ %>
                <div class="row">
                    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                        <div class="card border-0 shadow rounded-3 my-5">
                            <div class="card-body p-4 p-sm-5">
                                <h5 class="card-title text-center mb-5 fw-light fs-5">Sign In</h5>
                                <form action="/signin" method="post" enctype='application/json' name="login">
                                    <div class="form-floating mb-3">
                                        <input type="email" class="form-control" name="userid" id="userid"
                                            placeholder="name@example.com">
                                        <label for="userid">Email address</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input type="password" class="form-control" name="pw" id="pw"
                                            placeholder="Password">
                                        <label for="pw">Password</label>
                                    </div>

                                    <div class="form-check mb-3">
                                        <input class="form-check-input" type="checkbox" value=""
                                            id="rememberPasswordCheck">
                                        <label class="form-check-label" for="rememberPasswordCheck">
                                            Remember password
                                        </label>
                                    </div>
                                    <hr class="my-4">
                                </form>
                                <div class="d-grid">
                                    <button class="btn btn-primary btn-login text-uppercase fw-bold"
                                        onclick="form_login()" type="button">Sign in</button>
                                </div>
                                <p className="forgot-password text-right">
                                    <a href="/signup">회원이 아니신가요?</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
    </div>
    <% } %>


        <%- include('../partials/scripts') %>
</body>
<script>
    function form_login() {
        var userid = document.getElementById('userid');
        var pw = document.getElementById('pw');
        if (userid.value == "") {
            alert("이메일을 입력하세요.");
            userid.focus();
            return false;
        };
        if (pw.value == "") {
            alert("비밀번호를 입력하세요.");
            pw.focus();
            return false;
        };
        document.login.submit();
    };
</script>